<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity"
    >

    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv_searchbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="Look for a task here..."
        app:iconifiedByDefault="false"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/todo"
        android:background="@color/pink"
        android:textSize="30sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_searchbar"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:layout_editor_absoluteX="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <EditText
        android:id="@+id/et_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="200dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="81dp"
        android:layout_height="52dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:text="Add task"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintLeft_toRightOf="@+id/et_task" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="93dp"
        android:layout_height="52dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"
        android:text="Delete Task"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintLeft_toRightOf="@+id/btn_add" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/pink"
        >

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_todo"
            android:layout_width="62dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/todo" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_timer"
            android:layout_width="62dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/timer" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_logout"
            android:layout_width="62dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:background="@drawable/logout"/>

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>